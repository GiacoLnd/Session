{% extends 'base.html.twig' %}

{% block title %}Ajoutez un formateur{% endblock %}

{% block body %}
<h3>Ajoutez un formateur</h3>

{{form_start(formAddFormateur)}}

<div class="row">
    <div class="col-sm">
        {{form_row(formAddFormateur.prenom)}}
    </div>
    <div class="col-sm">
        {{form_row(formAddFormateur.nom)}}
    </div>
</div>
<div>
    <div class="col-sm">
        {{form_row(formAddFormateur.ville)}}
    </div>
    <div class="col-sm">
        {{form_row(formAddFormateur.dateNaissance)}}
    </div>
</div>
<div class="row">
</div>
<div class="row">
    <div class="col-sm">
        {{form_row(formAddFormateur.phone)}}
    </div>
    <div class="col-sm">
        {{form_row(formAddFormateur.email)}}
    </div>
    <div class="col-sm">
        {{form_row(formAddFormateur.password)}}
    </div>
    <div class="col-sm">
        {{form_row(formAddFormateur.sessions)}}
    </div>
</div>
<div class="w-100">
    {{form_row(formAddFormateur.valider)}}
</div>
{{form_end(formAddFormateur)}}

{% endblock %}
