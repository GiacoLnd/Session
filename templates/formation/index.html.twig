{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<h2 class="text-center fs-5 p-3">Liste des formations</h2>
<div class="d-flex justify-content-center align-items-center flex-wrap gap-3">
{% for formation in formations %}

    <a class="text-decoration-none text-success fw-semibold border border-success rounded p-2" href="{{path('formation_detail', {'id': formation.getId()})}}">{{ formation.getFormationName() }}</a><br>
    
{% endfor %}
</div>

{% endblock %}
