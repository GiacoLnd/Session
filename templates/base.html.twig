<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-transparent">
            <div class="container-fluid d-flex flex-wrap justify-content-between align-items-center">
                <ul class="nav flex-nowrap">
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-uppercase text-dark d-flex align-items-center" href="{{ path('app_formation') }}">
                            <img src="{{ asset('img/logo-no-bg.png') }}" alt="Logo" width="100" height="100" class="me-2">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-uppercase text-dark" href="{{ path('app_session') }}">
                            Liste des sessions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-uppercase text-dark" href="{{ path('app_stagiaire') }}">
                            Liste des stagiaires
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-uppercase text-dark" href="{{ path('app_formateur') }}">
                            Liste des formateurs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-uppercase text-dark" href="{{ path('app_form_module') }}">
                            Liste des modules
                        </a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-uppercase text-dark" href="{{ path('app_logout') }}">
                            Déconnexion
                        </a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-uppercase text-dark" href="{{ path('app_login') }}">
                            Connexion
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-uppercase text-dark" href="{{ path('app_register') }}">
                            Inscription
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </nav>   
        <div id="wrapper" class="d-flex flex-column justify-content-center align-items-center mb-5">
            <h1 class="display-3 text-center fw-bold text-primary">SessionCraft</h1>
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> 
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
    </body>
</html>
